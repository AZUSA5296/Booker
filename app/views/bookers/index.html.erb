<body>

    <p id="success"><%= flash[:success] %></p>

    <h1>Books</h1>

    <table>

        <thead>
            <tr>
                <th>Title</th>
                <th>Body</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
             <% @bookers.each do |booker| %>
             <tr>
                 <td><%= booker.title %></td>
                 <td><%= booker.body %></td>
                 <td><%= link_to 'Show', booker_path(booker.id)%></td>
                 <td><%= link_to 'Edit', edit_booker_path(booker.id)%></td>
                 <td><%= link_to 'Destroy', booker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>

            <% end %>
        </tbody>

    </table>

    <h2>New book</h2>

    <% if @booker.errors.any? %>
    　<div id="alert_create">
    　   <h2><%= @booker.errors.count %>errors prohibited this book from being saved:</h2>
    　   <ul>
    　       <% @booker.errors.full_messages.each do |message| %>
    　       <li><%= message %></li>
    　     <% end %>
    　   </ul>
    　</div>
    <% end %>


    <%= form_with model:@booker, local:true do |f| %>

    <h4>Title</br>
    <%= f.text_field :title %></h4>
    <h4>Body</br>
    <%= f.text_area :body %></h4>
    <h4><%= f.submit 'Create Book' %></h4>
    <% end %>

</body>